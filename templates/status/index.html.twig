{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_status_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_status_list'|trans }}</h1>
    <a class="btn btn-primary" href="{{ url('status_create') }}" role="button">{{ 'action_create_status'|trans }}</a>
    <br><br>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'status.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_name'|trans, 'status.name') }}</th>
                <th>{{ 'label_edition'|trans }}</th>
                <th>{{ 'label_deletion'|trans }}</th>

            </tr>
            </thead>
            <tbody>
            {% for status in pagination.items %}
                <tr>
                    <td>{{ status.id }}</td>
                    <td>{{ status.name }}</td>
                    <td>
                        <a href="{{ url('status_edit', {id: status.id}) }}" title="{{ 'action_edit'|trans }}">
                            {{ 'action_edit'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('status_delete', {id: status.id}) }}" title="{{ 'action_delete'|trans }}">
                            {{ 'action_delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}