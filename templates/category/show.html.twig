{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_category_details'|trans({'%id%': book.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_category_details'|trans({'%id%': booky.id|default('')}) }}</h1>
    {% if pagination is defined and pagination.items|length %}
    <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
    </div>
    <table class="table table-striped">
    <thead>
<tr>
    <th>{{ 'label_id'|trans }}</th>
    <th>{{ 'label_name'|trans }}</th>
    <th>{{ 'label_title'|trans }}</th>
</tr>
    </thead>
    <tbody>
{% for book in pagination.items %}
        <tr>

            <td>{{ book.id }}</td>
            <td>{{ book.author.name }}</td>
            <td>{{ book.title }}</td>
        </tr>

{% endfor %}
    </tbody>
    </table>

    <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
    </div>
        <p>
            <a href="{{ url('category_index') }}" title="{{ 'action_back_to_list'|trans }}">
                {{ 'action_back_to_list'|trans }}
            </a>
        </p>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}

{% endblock %}